(in-package #:u)

;;; ---------------------------------------------------------------------------
;;; specify that we're using the LISPWORKS interface
;;; ---------------------------------------------------------------------------

(setf (default-interface) :LISPWORKS)

;;; ---------------------------------------------------------------------------

(defmethod is-interface-available-p ((interface (eql :LISPWORKS)))
  (values t))


;;; ---------------------------------------------------------------------------
;;; quitting
;;; ---------------------------------------------------------------------------

(defmethod quit-lisp* ((interface (eql :LISPWORKS)))
  (ccl:quit))

#|

;;; ---------------------------------------------------------------------------
;;; memory management stuff
;;; ---------------------------------------------------------------------------

(defmethod total-bytes-allocated* ((interface (eql :LISPWORKS)))
  (values (ccl::total-bytes-allocated)))

;;; ---------------------------------------------------------------------------

(defmethod gc-time* ((interface (eql :LISPWORKS)))
  (values (gctime)))

;;; ---------------------------------------------------------------------------

(defmethod collect-garbage* ((interface (eql :LISPWORKS)))
  (gc))

|#
